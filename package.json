{
  "name": "@alugha/ima",
  "version": "0.0.1",
  "description":
    "A library for asynchronously loading the Google IMA SDK with static typing for the SDK",
  "license": "MIT",
  "author": "Niklas Korz <nk@alugha.com>",
  "homepage": "https://alugha.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alugha/typed-ima-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/alugha/typed-ima-sdk/issues"
  },
  "main": "dist/ima.cjs.js",
  "jsnext:main": "dist/ima.es.js",
  "module": "dist/ima.es.js",
  "scripts": {
    "lint": "yarn lint-file src/**/*.ts",
    "lint-file": "tslint -p tsconfig.json -c tslint.json",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": ["yarn lint-file --fix", "git add"],
    "*.md": ["prettier --write", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  }
}
